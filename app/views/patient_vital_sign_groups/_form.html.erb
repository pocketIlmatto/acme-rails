<%= form_for [@patient, @patient_vital_sign_group], html: {class: "form"} do |f| %>
  <%= render 'shared/errors', obj: @patient_vital_sign_group %>
  <div class="form-group">
    <%= f.label :bp, "Blood pressure:" %>
    <%= f.text_field :bp %>
  </div>
  <div class="form-group">
    <%= f.label :weight, "Weight:" %>
    <%= f.text_field :weight %>
  </div>
  <div class="form-group">
    <%= f.label :temp, "Temp:" %>
    <%= f.text_field :temp %>
  </div>
  <div class="form-group">
    <%= f.label :hr, "Heart rate:" %>
    <%= f.text_field :hr %>
  </div>
  <div class="form-group">
    <%= f.label :measured_at, "Measured on:" %>
    <%= f.datetime_select :measured_at, default: 1.minute.ago %>
  </div>
  <%= f.submit "Add", class: "btn btn-primary"%>
<% end %>
