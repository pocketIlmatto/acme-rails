
<% patient_vital_signs = @patient.patient_blood_pressures.measured_since(10.days.ago).order(measured_at: :desc) %>
<% unless patient_vital_signs.empty? %>
  <%= render partial: "patient_chart_area", locals: {vital_sign_name: "Blood pressure", patient_vital_signs: patient_vital_signs} %>
<% end %>
